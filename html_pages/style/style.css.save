*{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    margin: 0;
    padding: 0;
}

header{
    margin-top: 1%;
    margin-left: 1%;
    margin-right: 1%;
    margin-bottom: 4%;
    color: rgb(238, 237, 185);
    background-color: #151922;

    -moz-border-radius: 25px; /* pour Mozilla */
    -khtml-border-radius: 25px; /* pour Safari et Chrome */
    -webkit-border-radius: 25px; /* pour Safari sur Mac */

    border-radius:  25px 25px 0px 0px;
}

table.logoAndTitle{
    margin-left: auto;
    margin-right: auto;
}

img.logo{
    scale: 55%;
}

h1.begin{
    text-align: center;
    text-decoration: underline;
}

h2.bywhixon{
    text-align: center;
}

nav{
    width: 100%;
    position: sticky;
    top: 0%;
}

li.HomePage{
    -moz-border-radius: 25px; /* pour Mozilla */
    -khtml-border-radius: 25px; /* pour Safari et Chrome */
    -webkit-border-radius: 25px; /* pour Safari sur Mac */

    border-radius:  0px 0px 0px 25px;
}

li.lastTopic{
    -moz-border-radius: 25px; /* pour Mozilla */
    -khtml-border-radius: 25px; /* pour Safari et Chrome */
    -webkit-border-radius: 25px; /* pour Safari sur Mac */

    border-radius:  0px 0px 25px 0px;
}


nav li{
    font-size: large;
    list-style: none;
    background-color: #151922;
    
    float: left;
    width: 25%;/*100% divisé par le nombre d'éléments de menu*/
    text-align: center;/*Centre le texte dans les éléments de menu*/
}

nav li a{
    color: rgb(238, 237, 185);
}

section.formulaire{
    margin-bottom: 1%;
    margin-left: 1%;
    margin-right: 1%;

    text-align: center;

    background-color: #F0EBE3;

    -moz-border-radius: 15px; /* pour Mozilla */
    -khtml-border-radius: 25px; /* pour Safari et Chrome */
    -webkit-border-radius: 25px; /* pour Safari sur Mac */

    border-radius: 12px; /* CSS3 */
}

form {
    font-family: 'Roboto', sans-serif;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

label {
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

input, textarea {
    width: 90%;
    padding: 12px;
    margin: 10px ;
    border: 1px solid #ccc;
    border-radius: 13px;
}

textarea{
    padding: 6%;
    width: 80%;
}

input:focus, textarea:focus {
    border-color: #007BFF;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

button {
    padding: 10px 15px;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
}

button:hover {
    background-color: #0056b3;
}

article section.article{
    margin-bottom: 1%;
    margin-left: 1%;
    margin-right: 1%;

    background-color: #F0EBE3;

    -moz-border-radius: 15px; /* pour Mozilla */
    -khtml-border-radius: 25px; /* pour Safari et Chrome */
    -webkit-border-radius: 25px; /* pour Safari sur Mac */

    border-radius: 12px; /* CSS3 */
}

h1.presentation{
    font-style: italic;
    text-align: center;
    font-size: x-large;

    text-decoration: underline;
}

h3.presentation2{
    text-decoration: underline;
}

.presentation2{
    margin-left: 50px;
    margin-right: 50px;
}

p.presentation2{
    font-weight: 650;
}

table{
    margin-left: auto;
    margin-right: auto;
    border: rgb(238, 237, 185);
    margin: 1;
}

a.link{
    color: rgb(238, 237, 185);
}

footer{
    margin-bottom: 1%;
    margin-left: 1%;
    margin-right: 1%;
    margin-top: auto;

    color: rgb(238, 237, 185);
    background-color: #151922;
    text-align: center;

    -moz-border-radius: 25px; /* pour Mozilla */
    -khtml-border-radius: 25px; /* pour Safari et Chrome */
    -webkit-border-radius: 25px; /* pour Safari sur Mac */

    border-radius:  25px 25px 25px 25px;
}

.titleDesc, .titleLan, .description, .language{
    text-align: left;
}

.titleDesc, .titleLan{
    font-size: large;
    text-decoration: underline;
    margin-top: 20px;
}


div.title{
    font-size: x-large;
    text-decoration: underline;
}

.cell {
    padding: 20px;
    width: auto;
    height: auto;
    border-radius: 5px;
    text-align: left;

    text-align: center;
    font-style: italic;
}

.title, .description, .language {
    margin: 5px 0;
}

.title b, .description b, .language b {
    color: #333;
}

.language-dropdown {
    position: relative;
    display: inline-block;
    font-family: Arial, sans-serif;
}

/* Bouton principal */
.dropdown-button {
    background-color: #f1eaa4d7;
    color: #000000;
    padding: 10px 15px;
    font-size: 16px;
    border: none;
    border-radius: 25px 5px 5px 5px;
    cursor: pointer;
}

.dropdown-button:hover {
    background-color: #f1eba4f6;
}

/* Liste déroulante cachée */
.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f1eaa4d7;
    min-width: 120px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1;
    border-radius: 5px;
}

.dropdown-content a {
    color: #333;
    text-decoration: none;
    padding: 10px;
    display: block;
}

.dropdown-content a:hover {
    background-color: #f1eba4f6;
}

/* Afficher le menu au survol */
.language-dropdown:hover .dropdown-content {
    display: block;
}
