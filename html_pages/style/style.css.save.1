/* Tête du site */
header{
    margin-right: 10%;
    transition: transform 0.5s ease-out;

    background-color: transparent; /* Couleur gris clair */
    position: sticky;
    top:0%;
}

/* Logo du site */
img.logo{
    scale: 46%;
}

/* */
h2.begin{
    font-size: 1vw;
}

table.logoAndTitle{
    font-size: 1vw; 
    margin: 0 auto; /* Centre la table horizontalement */
    display: table; /* Assure le comportement en tant que table */
    border-collapse: separate;
}

th.menu{
    border-collapse: separate; /* Permet d'espacer les cellules */
    padding-right: 2vw; ;
}

/* Mets des espaces entre la cellule du titre et logo et le menu de selection*/
.spaced-cell {

    padding-right: 20vw; /* Ajoute de l'espace à droite */
}

/* Bouton principal */
.dropdown-button {
    background-color: transparent;
    color: #000000;
    border: none;
    cursor: pointer;
}

/* on change la couleur du bouton au survole */
.dropdown-button:hover {
    text-decoration: underline;
    background-color: transparent;
}

/* on paramètre le menu */
.language-dropdown {
    position: relative;
    display: inline-block;
    font-family: Arial, sans-serif;
}

/* Afficher le menu au survol */
.language-dropdown:hover .dropdown-content {
    display: block;
}

/* Liste déroulante cachée */
.dropdown-content {
    background-color: #0000004b;
    display: none;
    position: absolute;
    min-width:  1.25vw;
    font-size: 0.75vw;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1;
    border-radius: 5px;
}

.dropdown-content a { 
    color: #333;
    text-decoration: none;
    padding: 10px;
    display: block;
    border-radius: 5px 5px 5px 5px;    
}

/* changer la couleur du texte de langue au survol */
.dropdown-content a:hover{
    background-color: #0000004b;
}

/*
* Menu principal du site change les liens
*/
table th a{
    color: #333;
    text-decoration: none;
}

table th a:hover{
